{
  "compilerOptions": {
    /* 基础配置 */
    "target": "ESNext", // 使用较新的 ECMAScript 特性
    "module": "CommonJS", // CLI 工具通常使用 CommonJS 模块
    "outDir": "./dist", // 输出目录
    // "rootDir": "./src", // 源代码目录

    /* 模块解析 */
    "esModuleInterop": true,
    "resolveJsonModule": true, // 允许导入 JSON 文件
    "moduleResolution": "node", // 使用 Node.js 的模块解析策略

    /* 类型检查 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,

    /* 其他优化 */
    "sourceMap": true, // 生成 sourcemap 便于调试
    "skipLibCheck": true, // 跳过声明文件类型检查
    "forceConsistentCasingInFileNames": true,

    /* CLI 特有配置 */
    "types": ["node"], // 包含 Node.js 类型定义
    "declaration": true, // 生成 .d.ts 声明文件
    "paths": {
      "@/*": ["./src/*"],
      "@mudssky/shipit": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "examples/**/*.ts", "tests/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "rspack.config.ts",
    "vitest.config.ts",
    "shipit.config.ts",
    "shipit.config.local.ts"
  ]
}
